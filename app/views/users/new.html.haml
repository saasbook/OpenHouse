%p= flash[:notice] if flash[:notice]
%div{:class => 'signup-box'}
  %h1{:class => 'signup-header'} Create Your Account
  %h3{:class => 'signup-subheader'} Enter your new account information below.
  <br>
  %div{:class => 'row'}
    %div{:class => 'col-md-6 col-md-offset-3'}
      = form_tag users_path do
      
        = label :user, :email, 'E-mail Address'
        = text_field :user, 'email', class: 'form-control'
        = label :user, :password, 'Password'
        = password_field :user, 'password', class: 'form-control'
        = label :user, :first_name, 'First Name'
        = text_field :user, 'first_name', class: 'form-control'
        = label :user, :last_name, 'Last Name'
        = text_field :user, 'last_name', class: 'form-control'
        = label :user, :personal_description, 'Personal Description'
        = text_field :user, 'personal_description', class: 'form-control'
        <br>
        = submit_tag 'Submit', class: 'btn btn-primary'
    %div{:class => 'col-md-6 col-md-offset-3'}
      <br>
      = link_to "Back to Main Page", root_path